<div class="page-header">
  <h3><%= @event.title %>  <a href="/delete_event/<%= @event.id %>" class="btn btn-danger" rel="nofollow"> Delete Event
      </a></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">

      <dd><img src = "<%= @event.receipt %>" width="250"></dd>

      <dt>Title</dt>
      <dd><%= @event.title %></dd>

      <dt>Location</dt>
      <dd><%= @event.location %></dd>

      <dt>Description</dt>
      <dd><%= @event.description %></dd>

      <dt>Date</dt>
      <dd><%= @event.date %></dd>

      <dt>Items</dt>
      <dd>
           <table class="table table-striped table-hover">
             <tr>
               <th>Item</th>
               <th>Description</th>
              <th>Owner</th>
               <th>Price</th>
               <th>Quantity</th>
               <th>Total</th>
               <th></th>
             </tr>
             <% @event.items.each do |item| %>
             <tr>
               <td><%= item.name %></td>
               <td><%= item.description %></td>
                <td><%= item.user.first_name %></td>
               <td><%= item.price %></td>
               <td>2</td>
               <td><%= number_to_currency(item.price * 2) %> </td>
               <td> <a href="http://developer.venmo.com/paymentlinks"> <img src="http://brand.venmo.com/img/logo-mark.png" width="50"> </a></td>
              </tr>
              <% end %>
            </table>
    </dl>
  </div>

      <div class="col-md-12">
        <form action="/create_item" method="post">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for name -->
          <div class="form-group">
            <label for="name" class="control-label">
              Item
            </label>

            <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @item.name %>">
          </div>

          <!-- Label and input for description -->
          <div class="form-group">
            <label for="description" class="control-label">
              Description
            </label>

            <textarea id="description" name="description" placeholder="Description" class="form-control" rows="3"><%= @item.description %></textarea>
          </div>

          <!-- Label and input for user_id -->
          <div class="form-group">
            <label for="user_id" class="control-label">
              Owner
            </label>

            <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @item.user_id %>">
          </div>


            <!-- Hidden input for event ID -->
            <input type="hidden" id="event_id" name="event_id" placeholder="Event" class="form-control" value="<%= @event.id %>">

          <!-- Label and input for price -->
          <div class="form-group">
            <label for="price" class="control-label">
              Price
            </label>

            <input type="text" id="price" name="price" placeholder="Price" class="form-control" value="<%= @item.price %>">
          </div>

          <button class="btn btn-success">
            Create Item
          </button>
          or
          <a href="/items">Cancel</a>
        </form>
      </div>

    <div class="hidden">
      <a href="/events" class="btn btn-primary">
        Back
      </a>
      <a href="/events/<%= @event.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_event/<%= @event.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
