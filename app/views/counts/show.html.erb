<div class="page-header">
  <h3>Count #<%= @count.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>User</dt>
      <dd><%= @count.user_id %></dd>

      <dt>Item</dt>
      <dd><%= @count.item_id %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/counts" class="btn btn-primary">
        Back
      </a>
      <a href="/counts/<%= @count.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_count/<%= @count.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
