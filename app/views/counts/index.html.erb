<div class="page-header">
  <h1>
    Counts
    <a href="/counts/new" class="btn btn-lg btn-success">New Count</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Item</th>
        <th>Actions</th>
      </tr>

      <% @counts.each do |count| %>
      <tr>
        <td><%= count.user_id %></td>
        <td><%= count.item_id %></td>
        <td>
          <a href="/counts/<%= count.id %>" class="btn btn-primary">Show</a>
          <a href="/counts/<%= count.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_count/<%= count.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
