<div class="page-header">
  <h1>
    My Charges
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Event</th>
        <th>Location</th>
        <th>Item</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Total</th>
        <th></th>
      </tr>

      <% @items.each do |item| %>
      <tr>
        <td><%= item.event.title %></td>
            <td><%= item.event.location %></td>
          <td><%= item.name %></td>
          <td><%= item.price %></td>
          <td> <%= item.quantity %></td>
          <td><%= number_to_currency(item.price * item.quantity) %> </td>
         <td><a href="https://venmo.com/<%=item.event.user.Venmo%>?txn=pay&amount=<%=item.price*item.quantity%>&note=for+<%= item.name %>+@+<%=item.event.location%>"> <img src="http://brand.venmo.com/img/logo-mark.png" width="50"> </a></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
